{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpeniTools",
  "version": "0.1.0",
  "identifier": "com.openitools.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../frontend/build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "OpeniTools",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "alwaysOnTop": false,
        "visible": true,
        "focus": true,
        "backgroundColor": "#000000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "msi", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "bundle": {
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc0OTRDNEYwNUM4NDE2NzMKUldSekZvUmM4TVNVZEJiRXFsdE9COC9lVUhoUW1iamFYNkZ6Tit5MmJNa2t3Y3RkUmRlQ0FXYm4K",
      "endpoints": [
        "https://github.com/abdullahalternative/openitools/releases/latest/download/latest.json"
      ]
    }
  }
}
